{% extends 'base.html.twig' %}

{% block body %}
    
    {% block stylesheets %}

        {{ parent() }}
        
        <link href="{{ asset('bundles/pets/css/datepicker-css/bootstrap-datepicker.css') }}" rel="stylesheet">

    {% endblock %}
    
    {{ form_start(form) }}
        <div class="row">
            <div class="col-sm-6 col-md-offset-3" align="left">
            <!--Esto debe conectar con anuncios-->
                <font style="color: #00BCD4;font-weight: bold; font-size:23px;">
                    ¿En qué categoria va tu anuncio?
                </font>
                {{form_row(form.categoria, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-6 col-md-offset-3" align="left">
                <br>
                <font style="color: #00BCD4;font-weight: bold; font-size:23px;">
                    Detalles de tu anuncio
                </font>
                <br>
                <br>
                <!--Esto debe conectar con anuncios-->
                {{form_row(form.titulo, { 'attr': {'class': 'form-control','placeholder':'...'} }) }}
                <br>
                {{form_row(form.animal.descripcion, { 'attr': {'class': 'form-control','rows':'5','placeholder':'...'} }) }}
                <br>
                {{form_row(form.animal.propietario, { 'attr': {'value': app.user.username ,'readonly':'readonly'} }) }}
                <br>
                {{form_row(form.animal.tlf, { 'attr': {'class': 'form-control','maxlength':'9','placeholder':'...'} }) }}
         
                <!--Esto debe conectar con anuncios-->
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-6 col-md-offset-3" align="left">
                <br> 
                <font style="color: #00BCD4;font-weight: bold; font-size:23px;">
                    Datos del animal
                </font>
                
                <br>
                <br>
                {{form_row(form.animal.nombre) }}
                <br>
                {{form_row(form.animal.raza) }}
                <br>
                {{form_row(form.animal.tipo) }}
                <br>
                {{form_row(form.animal.sexo) }}
                <br>
                
                {#<div id="sandbox-container">
                    {{form_row(form.animal.nacimiento, {'type':'text'}) }}
                    <br>  
                </div>#}
                
                
                <label>{{ form_label(form.animal.nacimiento, 'player.edit.birthDate')}}: </label>
                <div id="birthDate">
                    {{ form_widget(form.animal.nacimiento, {'type':'text', 'attr': {'class': 'form-control '}}) }}
                </div>
                
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-6 col-md-offset-3" align="left"><br>
                <font style="color: #00BCD4;font-weight: bold; font-size:23px;">
                    Elija la imagen que se mostrará
                </font>
                {{form_row(form.animal.file) }}
                <br>
            </div>
        </div>
     
        <br>
        
        
        <div class="row" >
            <div class="col-sm-6 col-md-offset-3">
                <br>
                <input id="botonPublicar" class="btn btn-info" type="submit" value="Publicar anuncio" style='width:100%; height:40px; font-size:20px' />
            </div>
        </div>
    {{ form_end(form) }}
    
    {% block javascripts %}{{ parent() }}{% endblock %}
    
    <script src="{{ asset('bundles/pets/js/datepicker-js/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('bundles/pets/js/datepicker-js/bootstrap-datepicker.es.min.js') }}"></script>
    <script>
        /*$('#sandbox-container input').datepicker({
            format: "mm-dd-yyyy",
            weekStart: 1,
            language: "es",
            orientation: "bottom auto",
        });*/
        $('#birthDate input').datepicker({
            autoclose: true,
            todayHighlight: true,
            format: 'yyyy-mm-dd',
            language: "es",
            firstDay: 1
        });
    </script>

{% endblock %}