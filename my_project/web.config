<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <rule name="SimpleURL" patternSyntax="ECMAScript" stopProcessing="true">
                    <match url="(.*)" />
                    <action type="Redirect" url="http://webpetsfundation.azurewebsites.net/my_project/web/app_dev.php" appendQueryString="false" redirectType="Permanent" />
                    <conditions>
                        <add input="{HTTP_HOST}" pattern="SimpleURL\.webpetsfundation.azurewebsites.net" />
                    </conditions>
                </rule>
	    </rules>
        </rewrite>
    </system.webServer>
</configuration>