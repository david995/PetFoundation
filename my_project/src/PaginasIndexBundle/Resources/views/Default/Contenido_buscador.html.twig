{% block body %}
    {% block guide %}
        <br/>
        <a style="fixed:top" href="{{ path("index_homepage") }}">Inicio</a> > <a href="#">Buscador</a>
    {% endblock guide %}
    <br>
    <div class="panel-body">
        <div class="dataTable_wrapper">
            <table id="mitabla"  class="table table-striped table-hover">
                <thead>
                     <tr><center>
                         <div id="prueba"></div>
                         <th class="hidden-md"> </th>
                         <th id="titulo" class="centrarcosas">TÍTULO DEL ANUNCIO</th>
                         <th id="informacion" class="centrarcosas">INFORMACIÓN</th>
                     </tr>
                    
                </thead>
                <tbody>
                    {% for anuncio in anuncios %}
                        <tr>
                            <td  class="col-md-4 hidden-md">
                                <div><!--  col-md-offset-2 -->
                                    <center>
                                        <img width="70%" src="{{ asset('bundles/index/imgs/imgs/labrador.jpg') }}" id="imgfor" class="img-rounded hidden-md ">
                                    </center>
                                </div>
                            </td>
                            <td height="100%" class="col-md-3 centrarcosas"><b>{{ anuncio.titulo }}</b></td>
                            <td class="col-md-6">
                                <center>
                                    <br>
                                    <table class="table table-hover">
                                        <tr>
                                            <th class="col-md-3">Descripción</th>
                                            <td class="col-md-9"> {{ anuncio.descripcion }}</td>
                                        </tr>
                                        <tr>
                                            <th class="col-md-3">Nombre</th>
                                            <td class="col-md-9">{{ anuncio.Nombre }}</td>
                                        </tr>
                                        <tr>
                                            <th class="col-md-3">Sexo</th>
                                            <td class="col-md-9">{% if anuncio.Sexo == 'm'  %}Macho{% else %}Hembra{% endif %}</td>
                                        </tr>
                                        <tr>
                                            <th class="col-md-3">Raza</th>
                                            <td class="col-md-9">{{ anuncio.Raza }}</td>
                                        </tr>
                                        <tr>
                                            <th class="col-md-3">Tipo</th>
                                            <td class="col-md-9">{{ anuncio.Tipo }}</td>
                                        </tr>
                                        <tr>
                                            <th class="col-md-3">Propietario</th>
                                            <td class="col-md-9">{{ anuncio.Propietario }}</td>
                                        </tr>
                                        <tr> 
                                            <th class="col-md-3">Teléfono</th>
                                            <td class="col-md-9">{{ anuncio.tlf }}</td>
                                        </tr>
                                        <tr>
                                            <th class="col-md-3">F. de nacimiento</th>
                                            <td class="col-md-9">{{ anuncio.Nacimiento }}</td>
                                        </tr>
                                    </table>
                                </center>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    
    <script src="{{ asset('bundles/paginasindex/js/dataTable.js') }}"></script>
    
    
    <script src="{{ asset('bundles/paginasindex/js/jquery.dataTables.min.js') }}"></script>
    
    <script src="{{ asset('bundles/paginasindex/js/jquery-1.12.0.min.js') }}"></script>
    
