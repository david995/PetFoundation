{% extends 'base.html.twig' %}

{% block body %}

    {{ form_start(form) }}
    
        <div class="row">
            <div class="col-sm-8 col-md-offset-2" align="left">
                <font style="color: #00BCD4;font-weight: bold; font-size:23px;">Registrarse</font><br><br>
                       
                <label>Nombre de usuario</label> 
                <div class="input-group">
                  {{ form_widget(form.username, {'attr': {'class': 'form-control '}}) }}<br>
                  <span class="input-group-addon "><span class="glyphicon glyphicon-user"></span></span>    
                </div>
                
                <br>
           
                
                {% for passwordField in form.plainPassword %}
                    <div class="form-group col-lg-6">
                        {{ form_label(passwordField, null, { 'attr': {'class': 'form-label'} }) }}
                        {{ form_widget(passwordField, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                {% endfor %}
                
                <br>
              
                <label>E-mail</label>
                    <div class="input-group">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control '}}) }}<br>
                        <span class="input-group-addon "><span class="glyphicon glyphicon-envelope"></span></span>    
                    </div><br>
            
      
        
                {{ form_label(form.image) }}
                {{ form_widget(form.image, { 'data-preview-file-type':'text', 'id': 'input-id',  'attr': {'class': 'file-loading' }, 'required':false }) }}
               
                <br>
                      
                <script>
                    $(document).on('ready', function() {
                        $("#input-id").fileinput({
                            overwriteInitial: false,
                            maxFileSize: 10000,
                            showUpload: false,
                            initialCaption: "Inserta tu imagen aqu√≠"
                        });
                    });
                </script>
                
                <div hidden>{{ form_row(form.enabled, { 'checked' : true}) }}</div>
                
                {% if is_granted('ROLE_ADMIN') %}
                    <center>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="password">Rol:</label>
                            <br>
                            <select style="" id="fos_user_registration_form_roles" name="fos_user_registration_form[roles][]" required="required" multiple="multiple">
                                <option value="ROLE_ADMIN" >ADMINISTRADOR</option>
                                <option value="ROLE_SUPERADMIN" >SUPERADMINISTRADOR</option>
                                <option value="ROLE_USER"  selected="selected">USUARIO</option>
                            </select>
                        </div>
                    </center>
                {% else %}
                    <div class="col-sm-10">
                        {{ form_row(form.roles) }}
                    
                    </div>
              
                {% endif %}
                    
              
                <input id="botonPublicar" class="btn btn-info" type="submit" id="_submit" name="_submit" value="Registrarse" style='width:100%; height:40px; font-size:20px' />
            </div>
        </div>
        
 


    {{form_end(form) }}
{% endblock %}
